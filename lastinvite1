<style>
    body {
        background: #1c1c1c; 
        color: #d4d4d4;
        font-family: 'Courier Prime', monospace;
        font-size: 24px;
        padding: 40px;
        white-space: pre-wrap;
    }
    .cursor {
        display: inline-block;
        width: 10px;
        height: 24px;
        background: #d4d4d4;
        margin-left: 4px;
        animation: blink 0.7s infinite;
    }
    @keyframes blink {
        0% { opacity: 1; }
        50% { opacity: 0; }
        100% { opacity: 1; }
    }
