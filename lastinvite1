<body>
<div id="output"></div><div class="cursor"></div>

<!-- Звук печати -->
<audio id="typeSound" src="https://www.soundjay.com/mechanical/sounds/typewriter-key-1.mp3" preload="auto"></audio>

<script>
    const text = `привет! это пример текста, который печатается как на старой машинке.
тёмная сторона, ровный шрифт, эффект настоящей печати.`;

    const output = document.getElementById("output");
    const typeSound = document.getElementById("typeSound");
    let i = 0;
    const speed = 80; // базовая скорость печати (мс)

    function typeWriter() {
        if (i < text.length) {
            // Добавляем букву
            output.innerHTML += text.charAt(i);

            // Воспроизводим звук печати
            typeSound.currentTime = 0;
            typeSound.play();

            i++;
            // Случайная вариация скорости, чтобы печать выглядела естественной
            setTimeout(typeWriter, speed + Math.random() * 50);
        }
    }

    typeWriter();
</script>
</body>
